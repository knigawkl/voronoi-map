<Window x:Class="LUPA.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LUPA"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="LUPA"
        Height="500"
        Width="500"
        WindowStartupLocation="CenterScreen"
        Icon="/Resources/icon.ico">
    <DockPanel>
        <Menu Height="20" DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="Open" Click="OpenFile_Click"/>
            </MenuItem>
        </Menu>
        <Canvas Name="Map" MouseDown="Map_MouseDown" DockPanel.Dock="Bottom">
            <Canvas.Background>
                <ImageBrush ImageSource="/Resources/contour.jpg"/>
            </Canvas.Background>
        </Canvas>
    </DockPanel>

</Window>
